  <div class="row">
    <!-- <div class="embedded_media col-md-8"><iframe width="560" height="315" src=<%= post.embed_code %> frameborder="0" allowfullscreen></iframe></div> -->
    <div class="embedded_media col-md-6 col-md-offset-1 col-xs-10 col-xs-offset-1"><%= raw post.embed_code %></div>
    <div data-id={{id}} class="post-title col-md-3 col-md-offset-1">
    <% if user_signed_in? %>
      <h2><%= link_to post.title, post_path(post) %></h2>
    <% else %>
      <h2><%= post.title %></h2>
    <% end %>
      <h5><%= post.created_at.strftime("%B %d, %Y @ %I:%M %p") %></h5>
      <h4>Tagged under:</h4>
      <ul class="tags">
      <% post.tags.each do |tag| %>
        <li class="tag">
          <%= button_to tag.name, tag_path(tag), method: "get", class: "btn-info btn btn-med" %>
        </li>
      <% end %>
      </ul>
      <br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1 post-content">
      <p><%= raw post.content %></p>
    </div>
  </div>
</li>
